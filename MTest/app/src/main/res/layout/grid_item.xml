<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#75000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/size.250"
        android:background="#000"
        android:layout_height="@dimen/size.330">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding.10"
        android:gravity="center"
        android:textColor="@android:color/white"
        />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/size.240"
        android:layout_height="@dimen/size.240"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:padding="@dimen/padding.5"
        android:src="@drawable/ic_one" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding.5"
        android:gravity="center"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAuthor"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding.5"
        android:gravity="center"
        android:textColor="@android:color/white"
         />
        </RelativeLayout>

</RelativeLayout>
