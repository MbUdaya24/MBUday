<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">




    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/size.250"
        android:layout_height="@dimen/size.250"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        android:contentDescription="@string/desc.productLogo"
        android:src="@drawable/ic_one" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/padding.10"
            android:gravity="center"
            android:singleLine="true"
            android:background="#75000000"
            android:textColor="@android:color/white"
            />





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">




    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"


        android:padding="@dimen/padding.5"
        android:gravity="center"
        android:background="#75000000"
        android:textColor="@android:color/white"
        />


        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:layout_below="@+id/tvAuthor"
            android:background="@android:color/darker_gray"

            />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_below="@+id/view"
            android:padding="@dimen/padding.5"
            android:gravity="center"
            android:background="#75000000"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</RelativeLayout>


